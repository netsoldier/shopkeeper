/**index.wxss**/

/* header */
.header-wrapper {
  height: 200rpx;
  padding-top: 40rpx;
  background-color: #02a4ff;
  
}

.header-wrapper .total {
  font-size: 48rpx;
  line-height: 60rpx;
  color: white;
  text-align: center;
}

.header-wrapper .content {
  margin: 60rpx 40rpx auto 40rpx;
  overflow: hidden;
}

.header-wrapper .content .btn-text {
  color:white;
}

.header-wrapper .content .btn-icon {
  width: 30rpx;
  height: 30rpx;
  margin-left: 8rpx;
}

.header-wrapper .content .left-wrapper {
  float: left;
  font-size: 30rpx;
}

.header-wrapper .content .right-wrapper {
  float: right;
  font-size: 30rpx;
}

/* list  start*/
.list-wrapper {
  height: 70rpx;
  padding: 30rpx 40rpx;
  clear:both;
}

.list-wrapper .list-type-icon {
  width: 50rpx;
  height: 50rpx;
  float:left;
  margin-top:10rpx;
}

.list-wrapper .list-content {
  max-width: 330rpx;
  float:left;
  margin-left:30rpx;
  color: #646566;
}

.list-wrapper .list-content .title {
  font-size: 30rpx;
}

.list-wrapper .list-content .note {
  font-size: 26rpx;
  color: #9e9e9e;
}

.list-wrapper .amount {
  float:right;
  margin-right: 20rpx;
  margin-top:15rpx;
  font-size: 30rpx;
  color: #646566;
}

/* footer start */
.footer-wrapper {
  position: fixed;
  left: 43%;
  bottom: 30rpx;
}

.footer-wrapper .add-icon {
  width: 110rpx;
  height: 110rpx;
}
.add-hover {
  opacity:0.6;
}
