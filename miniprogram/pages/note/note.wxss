.wrapper {
  padding-bottom: 50rpx;
}
.wrapper .pick-date {
  background-color: #02a4ff;
  text-align: right;
  height: 100rpx;
  line-height: 100rpx;
  padding-right: 40rpx;
}

.wrapper .pick-date .btn-text {
  color: white;
}

.wrapper .pick-date .btn-icon {
  width: 30rpx;
  height: 30rpx;
  margin-left: 8rpx;
}

.wrapper .input-money {
  background-color: #fff;
  color: #646566;
}

.wrapper .input-money text {
  margin-left: 40rpx;
  margin-right: 20rpx;
  line-height: 100rpx;
  font-size: 40rpx;
}

.wrapper .input-money input {
  display: inline-block;
  vertical-align: top;
  height: 100rpx;
  width: 650rpx;
  font-size: 30rpx;
}

.wrapper .scroll-type {
  width: 710rpx;
  height: 180rpx;
  white-space: nowrap;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.wrapper .scroll-type .item {
  display: inline-block;
  width: 150rpx;
  height: 180rpx;
  vertical-align: top;
  text-align: center;
}

.wrapper .scroll-type .item .img {
  width: 50rpx;
  height: 50rpx;
  margin: 40rpx 30rpx 0 30rpx;
}

.wrapper .scroll-type .item .title {
  color: #646566;
  font-size: 26rpx;
  text-align: center;
}

.wrapper .scroll-type .item .title-selected {
  color: #02a4ff;
}

.wrapper .remark {
  height: 100rpx;
  margin-left:40rpx;
  margin-right: 40rpx;
}

.wrapper .remark textarea {
  width: 100%;
  height:100%;
  color: #646566;
  font-size: 30rpx;
  margin-top: 20rpx;
}

.wrapper .btn-sure {
  display:block;
  width: 80%;
  height: 100rpx;
  line-height: 100rpx;
  margin:auto;
  margin-top: 50rpx;
  background-color: #02a4ff;
  color: white;
}
