/* header */

.header-wrapper {
  height: 200rpx;
  padding-top: 40rpx;
  background-color: #02a4ff;
}

.header-wrapper .total {
  font-size: 48rpx;
  line-height: 60rpx;
  color: white;
  text-align: center;
}

.header-wrapper .content {
  margin: 60rpx 40rpx auto 40rpx;
  overflow: hidden;
}

.header-wrapper .content .btn-text {
  color: white;
}

.header-wrapper .content .btn-icon {
  width: 30rpx;
  height: 30rpx;
  margin-left: 8rpx;
}

.header-wrapper .content .right-wrapper {
  float: right;
  font-size: 30rpx;
}

.wrapper .list .title {
  padding: 40rpx;
  height: 30rpx;
  font-size: 30rpx;
  line-height: 30rpx;
  color: #02a4ff;
}

.wrapper .list .cell {
  padding: 40rpx 0 40rpx 40rpx;
  position: relative;
}

.wrapper .list .cell .left {
  width: 230rpx;
}

.wrapper .list .cell .left image {
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
}

.wrapper .list .cell .left .type_name {
  margin-left: 30rpx;
  /* margin-right: 30rpx; */
  font-size: 30rpx;
  color: #646566;
}

.wrapper .list .cell .right {
  position: absolute;
  margin-left: 210rpx;
  bottom: 24rpx;
  margin-bottom: 24rpx;
}

.wrapper .list .cell .right .percentage {
  font-size: 24rpx;
  color: #9e9e9e;
}

.wrapper .list .cell .right .progresses {
  display: inline-block;
  width: 240rpx;
  vertical-align: middle;
  margin-left: 12rpx;
}

.wrapper .list .cell  .right .money {
  font-size: 26rpx;
  color: #646566;
  margin-top: 8rpx;
  margin-left: 20rpx;
}
