.wrapper {
  overflow: hidden;
}
.wrapper .type {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 50rpx;
}
.wrapper .type image {
  width: 50rpx;
  height: 50rpx;
}

.wrapper .type .title {
  font-size: 30rpx;
  line-height: 30rpx;
  color: #646566;
  margin-left:10rpx;
}

.wrapper .money {
  margin: 50rpx 0;
  font-size: 48rpx;
  line-height: 48rpx;
  text-align: center;
  color: #646566;
}

.wrapper .list {
  padding-left:40rpx;
  padding-top:40rpx;
  font-size: 30rpx;
}

.wrapper .list .name {
  display: inline-block;
  width: 120rpx;
  margin-right: 40rpx;
  color: #9e9e9e;
}

.wrapper .list .content {
  display: inline-block;
  width: 510rpx;
  vertical-align: top;
  color: #646566;
}

.wrapper .operation {
  display: flex;
  margin-top: 120rpx;
  margin-bottom: 80rpx;
  justify-content: space-around;
}
